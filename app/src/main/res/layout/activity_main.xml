    <!--android:layout_below = "@+id/etIP"-->
    <EditText
        android:id = "@+id/etPort"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:hint = "Enter Port No"
        android:inputType = "number" />
    <EditText
        android:id = "@+id/etOpt"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/etPort"
        android:hint = "Enter Operator"
        android:inputType = "text" />
    <EditText
        android:id = "@+id/etfirstNumber"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/etOpt"
        android:hint = "Enter First Number"
        android:inputType = "text" />
    <EditText
        android:id = "@+id/etsecondNumber"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/etfirstNumber"
        android:hint = "Enter Second Number"
        android:inputType = "text" />
    <Button
        android:id = "@+id/btnConnect"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/etsecondNumber"
        android:layout_gravity = "center"
        android:layout_marginTop = "16dp"
        android:text = "Connect to Server" />
    <Button
        android:id = "@+id/btnSend"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/btnConnect"
        android:layout_gravity = "center"
        android:layout_marginTop = "16dp"
        android:text = "Send" />

    <TextView
        android:id = "@+id/tvMessages"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/btnSend"
        android:inputType = "textMultiLine"
        android:textAppearance = "@style/Base.TextAppearance.AppCompat.Medium" />


